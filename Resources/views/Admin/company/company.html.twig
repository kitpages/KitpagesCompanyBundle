{% extends '::admin.html.twig' %}

{% block admin_body %}
<h1><a class="kitpages-company-link-breadcrumb" href="{{ path ("kitpages_company_admin_company_list") }}">{{ "Company List" | trans }}</a> > {% if form.vars.value.id == null %}{{ "New" | trans }}{% else %}{{form.vars.value.name}}{% endif %}</h1>
{% if form.vars.value.name != null %}
<a class="btn-standard" href="{{ path ("kitpages_company_admin_company_list_user", {"companyId": form.vars.value.id}) }}">{{ "List user" | trans }}</a>
{% endif %}
<div class="kitpages-company-form-default">
    <form {{ form_enctype(form) }} method="POST" >
        {{ form_row(form.name) }}
        {{ form_row(form.address) }}
        {{ form_row(form.country) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.email) }}
        {{ form_row(form.urlSite) }}
        {{ form_row(form.logo) }}
        <img src="{{ form.vars.value.urlLogo }}" >
        {{ form_rest(form) }}
        <div>
            <button type="submit" class="btn-standard" >{{ 'save'|trans }}</button>
        </div>
    </form>
</div>
{% endblock admin_body %}
