{% extends 'KitpagesCompanyBundle::layout-admin.html.twig' %}

{% block admin_body %}
{% form_theme form theme %}
<h2><a class="kitpages-company-link-breadcrumb" href="{{ path ("kitpages_company_admin_company_list_user", {"companyId": company.id}) }}">{{company.name}}</a> > New {{group}}</h2>

<div class="kitpages-company-form-default">
<form {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_widget(form) }}
    <div>
        <button type="submit" class="btn-standard" >{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
    </div>
</form>
</div>
<script>
    $(document).ready(function() {
        $('#fos_user_registration_form div:first input').focus();
    });
</script>
{% endblock admin_body %}
