{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="app-user-connexion">
    <form action="{{ path("fos_user_security_check") }}" method="post" id="login">
        <div>
            <h2>{{ "Identification" | trans }}</h2>
            {% if error %}
                <div class="error">{{ error }}</div>
            {% endif %}
            <div>
                <input type="text" id="username" name="_username" placeholder="{{ 'security.login.username.input'|trans({}, 'FOSUserBundle') }}" /><br />
                <input type="password" placeholder="{{ 'security.login.password.input'|trans({}, 'FOSUserBundle') }}"  id="password" name="_password" >


                <div>
                    <input type="checkbox" id="remember_me" name="_remember_me" checked />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                </div>
                <div>
                    <a href="{{ path('fos_user_resetting_request') }}">{{ 'Forgotten Password'|trans({}, 'FOSUserBundle') }}</a>
                </div>
            </div>
        </div>
        <hr />

        <input type="hidden" name="_target_path" value="{{targetPath|default('')}}"/>
        <button type="submit" class="app-user-connexion-submit btn-standard btn-picto-arrow">{{ 'Validate'|trans() }}</button>
    </form>
</div>

{% endblock %}
